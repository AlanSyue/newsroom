{
  "name": "newsroom-cli",
  "description": "A modern CLI to get your favorite news.",
  "license": "MIT",
  "author": "kpman",
  "homepage": "https://github.com/kpman/newsroom/#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kpman/newsroom.git"
  },
  "bugs": {
    "url": "https://github.com/kpman/newsroom/issues"
  },
  "version": "0.1.10",
  "main": "bin/cli.js",
  "bin": {
    "newsroom": "bin/cli.js",
    "nr": "bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:js && npm run build:pkg",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --copy-files --ignore '**/*.spec.js'",
    "build:pkg": "pkg . --out-path packed",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf lib packed",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && jest",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch",
    "tsc": "tsc",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "version": "rimraf package-lock.json && git add -A"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "feed-read-parser": "^0.0.6",
    "figures": "^2.0.0",
    "fuzzy": "^0.1.3",
    "inquirer": "^6.2.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "invariant": "^2.2.4",
    "minimist": "^1.2.0",
    "node-opml-parser": "^1.0.0",
    "open": "^0.0.5",
    "ora": "^3.0.0",
    "sane": "^2.5.1",
    "thenify": "^3.3.0",
    "update-notifier": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "pkg": "^4.3.4",
    "prettier": "^1.14.3",
    "prettier-package-json": "^2.0.1",
    "rimraf": "^2.6.2",
    "typescript": "^3.4.1"
  },
  "keywords": [
    "newsletter"
  ],
  "engines": {
    "node": ">=4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./coverage/"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "pkg": {
    "scripts": "lib/**/*.js",
    "assets": "lib/sources.opml",
    "targets": [
      "node6-macos",
      "node6-linux",
      "node6-win"
    ]
  }
}
